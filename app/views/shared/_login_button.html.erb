<% if !user_signed_in? || !current_user.has_all_provider?%>
	<section class="login">
	<ul class="loginbtns">
		<% if !user_signed_in? || !current_user.has_provider?(Provider.facebook.id) %>
			<li>
      <%=link_to user_omniauth_authorize_path(:facebook, :display => (request.user_agent =~/iPhone/)?'touch':'page'), :class => 'btn btn-primary' do %>
				<%= image_tag("btn_facebook.png") %>
				<p class="logintext"><%= t("shared._login_button.facebook.#{locale_key}") %></p>
			<% end %>
			</li>
		<% end %>
		<% if !user_signed_in? || !current_user.has_provider?(Provider.twitter.id) %>
			<li>
			<%=link_to user_omniauth_authorize_path(:twitter), :class => 'btn btn-info' do %>
				<%= image_tag("btn_twitter.png") %>
				<p class="logintext"><%= t("shared._login_button.twitter.#{locale_key}") %></p>
			<% end %>
			</li>
		<% end %>
		<% if !user_signed_in? || !current_user.has_provider?(Provider.github.id) %>
			<li>
			<%=link_to user_omniauth_authorize_path(:github), :class => 'btn' do %>
				<%= image_tag("btn_github.png") %>
				<p class="logintext"><%= t("shared._login_button.github.#{locale_key}") %></p>
			<% end %>
			</li>
		<% end %>
		<% if !user_signed_in? || !current_user.has_provider?(Provider.mixi.id) %>
			<li class="mixi">
			<%=link_to user_omniauth_authorize_path(:mixi), :class => 'btn' do %>
				<p class="logintext"><%= t("shared._login_button.mixi.#{locale_key}") %></p>
			<% end %>
			</li>
		<% end %>
	</ul>
	</section>
<% end %>
